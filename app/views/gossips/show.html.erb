<h1>Gossip#show</h1>

<% if flash[:success] %>
      <div class="alert alert-success" role="alert">
          <p>Message bien créer</p>      
      </div>
      <% end %>

<h3> Titre :  <%= @gossip.title%> </h3> 
<div class="card mx-auto mt-3 mb-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @gossip.title%></h5>
    <a href="<%= user_path(@user.id) %>">
      <h6 class="card-subtitle mb-2 text-decoration-none">
      <%= @user.first_name %> 
      <%= @user.last_name %>
      </h6>
    </a>
    <p class="card-text"><%= @gossip.content%></p>
    <a href="<%=city_path%>" class="btn btn-sm btn-primary">
      <%= @user.city.name%> </a>    
    <p class="card-text"><small class="text-muted"><%= time_ago_in_words(@gossip.created_at)%> ago.</small></p>
  </div>
</div>

<% if current_user==@user %>
<div class="d-flex justify-content-center align-items-center ">
    <%= link_to "Editer", edit_gossip_path, :class => "btn btn-sm  btn-success" %>
    <div class="btn"></div>
    <%= link_to "Supprimer", gossip_path, :class => "btn btn-sm  btn-dark", :data => {:confirm => "Êtes-vous sur?(e)"}, :method => :DELETE %>
</div>
<%end%>